<h2><%= t('.title') %></h2>

<div class="row">
  <div class="col-md-6">
    <%= link_to t('.create_new'), new_translation_path(locale: I18n.locale), class: 'btn btn-primary' %>
  </div>
  <div class="col-md-6 text-right">
    <%= search_form_for @q, class: 'form-inline' do |f| %>
        <div class="form-group">
          <%= f.search_field :key_cont, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit t('.search'), class: 'btn'%>
        </div>
    <% end %>

  </div>
</div>



<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.translation.key') %></th>
    <th><%= t('activerecord.attributes.translation.value') %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%= render @translations %>
  </tbody>
</table>

<%= paginate @translations %>